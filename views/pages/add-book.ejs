<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/modules/choices.js/public/assets/styles/choices.min.css" />
</head>
<body>
    <div class="container">
        <%- include('../components/header') %>
        <main>
            <div class="card" style="max-width: 600px; margin: auto;">
                <h2 class="mb-3"><%= title %></h2>
                <form action="/books/add" method="POST">
                    <div class="form-group">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="authors-select" class="form-label">Author</label>
                        <select id="authors-select" name="authors" class="form-label" required>
                            <option value="">Select or add an author</option>
                            <% authors.forEach(author => { %>
                                <option value="id:<%= author.id %>"><%= author.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="categories-select" class="form-label">Categories</label>
                        <select multiple id="categories-select" name="categories">
                            <% categories.forEach(category => { %>
                                <option value="id:<%= category.id %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" min="1" value="1" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Book</button>
                </form>
            </div>
        </main>
    </div>

    <script src="/modules/choices.js/public/assets/scripts/choices.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const authorsElement = document.getElementById('authors-select');
            if (authorsElement) {
                const choices = new Choices(authorsElement, {
                    addChoices: true,
                });
            }

            // Initialize Choices.js for categories
            const categoriesElement = document.getElementById('categories-select');
            if (categoriesElement) {
                const choices = new Choices(categoriesElement, {
                    removeItemButton: true,
                    addChoices: true,
                });
            }
        });
    </script>
</body>
</html>